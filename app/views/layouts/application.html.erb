<!DOCTYPE html>
<html>
<head>
  <title>Nagano</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <header>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="container">
        <div class="navbar-header">
        </div>
        <%= link_to "LOGO", '#', id: "logo" %>
        <div class="collapse navbar-collapse navbar-right" id="navbarEexample7">
          <ul class="nav navbar-nav">
            <% if member_signed_in? %>
            <li><%= link_to "マイページ",member_path %></li>
            <li><%= link_to "商品一覧", member_products_path %></li>
            <li><%= link_to "カート", member_cart_items_path %></li>
            <li><%= link_to "ログアウト", destroy_member_session_path %></li>
            <% else %>
            <li><%= link_to "商品一覧", member_products_path %></li>
            <li><%= link_to "新規登録", new_member_registration_path %></li>
            <li><%= link_to "ログイン", new_member_session_path %></li>
            <% end %>
          </ul>
        </div>
    </div>
    </div>
  </nav>
</header><!-- /header -->
<%= yield %>
</body>
</html>
