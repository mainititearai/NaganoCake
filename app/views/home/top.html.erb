<%= render 'layouts/members_header' %>
<div class="container" style="margin-top: 60px;">
	<div class="row">
		<div class="col-xs-2">
			<%= render 'layouts/genre', genres:@genres %>
		</div>
		<div class="col-xs-10">
			<div style="background: url(/assets/3102265_s.jpg) no-repeat 0% 0%; height: 500px; background-size: cover;" >
				<P class="introduction text-right"><strong>Welcome to</strong></p>
				<p class="introduction1 text-right" style="color: white; padding-right: 15px; "><strong>NaganoCake</strong></p>
				<p class="text-right" style="color: white; padding-top: 95px;">このサイトは、ケーキ販売のECサイトになります。<br/>会員でない方も商品の閲覧はできますが、購入には会員登録が必要になります。</p>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-offset-2 col-xs-10">
			<h3 style="background-color: #333333; color: white; height: 35px;">Pick up</h3>
			<div class="col-xs-12 table-responsive border-none">
				<table>
				<tr>
					<% @products.each do |product| %>
					<% if product.genre.active? %>
					<td style="padding: 0 30px;">
						<%= link_to member_product_path(product) do %>
							<%= attachment_image_tag(product,:image,:fill,150,150, fallback: "no_image.jpg",style: "border-radius: 30px;") %>
						<% end %><br>
						<%= link_to product.name,member_product_path(product),:style=>"color:gray;  text-decoration: none;" %><br>
						<%= (product.price*1.1).floor %>円
					</td>
					<% end %>
					<% end %>
				</tr>
			</table>
			</div>
		</div>
	</div>
</div>
<%= render 'layouts/members_footer' %>
