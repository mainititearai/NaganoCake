<%= render 'layouts/members_header' %>

<div class="container">
	<h1>注文履歴詳細画面</h1>
	<br>
	<div class="row">
		<div class="col-xs-6">
			<h3>注文情報</h3>
			<table class="table">
				<tr>
					<td>注文日</td><td><%= @order.created_at %></td>
				</tr>
				<tr>
					<td>配送先</td><td><%= @order.postcode %></td>
								  <td><%= @order.address %></td>
								  <td><%= @order.name %></td>
				</tr>
				<tr>
					<td>支払い方法</td><td><%= @order.payment_method %></td>
				</tr>
				<tr>
					<td>ステータス</td><td><%= @order.order_status_i18n %></td>
				</tr>
			</table>
		</div>
		<div class="col-xs-3">
			<h3>請求情報</h3>
			<table class="table">
				<% @order.order_items.each do |order_item| %>
				<% sab_total = (order_item.product.price*1.1*order_item.quantity).floor %>
				<% @sum += sab_total %>
				<% end %>
				<tr>
					<td>商品合計</td><td><%= @sum %></td>
				</tr>
				<tr>
					<td>配送料</td><td>800</td>
				</tr>
				<tr>
					<td>ご請求額</td><td><%= @sum+800 %></td>
				</tr>
			</table>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-8">
			<h3>注文内容</h3>
			<table class="table">
				<tr>
					<td>商品</td><td>単価(税込)</td><td>個数</td><td>小計</td>
				</tr>
				<% @order.order_items.each do |order_item| %>
				<tr>
					<td><%= order_item.product.name %></td>
					<td><%= (order_item.product.price*1.1).floor %></td>
					<td><%= order_item.quantity %></td>
					<td><%= (order_item.product.price*1.1*order_item.quantity).floor %></td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>