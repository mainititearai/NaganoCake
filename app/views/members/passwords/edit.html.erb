<%= render 'layouts/members_header' %>

<div class="container">
   <h2 class="title">パスワード再設定フォーム</h2>
      <div class="row">
        <div class="col-xs-3 col-xs-offset-1">

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="field">
              <br><br><%= f.label :password, "新しいパスワード（６文字以上）" %><br />
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password",class:"form-control" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, "新しいパスワードの確認" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
            </div>

            <div class="actions">
              <br><%= f.submit "更新", class:"btn btn-primary btn-shine col-xs-5 col-xs-offset-2" %>
            </div>
          <% end %>
      </div>
  </div>
</div>

<%= render "layouts/members_footer" %>
