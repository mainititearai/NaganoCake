<%= render 'layouts/members_header' %>

<div class="container">
  <div class="row">
     <div class="text-center">

        <br/><form class="form-horizonral">
          <div class="col-xs-6 col-xs-offset-3">
                   <div class="text-left">
                     <h4>会員の方はこちらからログイン</h4>
                   </div>
               <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|%>
                <br/><div class="form-group">
                  <%= f.label :メールアドレス ,class:"control-label col-xs-4" %>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-xs-8" %>
                </div>
                <br/><div class="form-group">
                  <%= f.label :パスワード, class:"control-label col-xs-4" %>
                  <%= f.password_field :password, autocomplete: "current-password", class:"col-xs-8" %>
                </div>

                <div class="text-right">
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <br /><%= link_to "=>パスワードを忘れた方はこちら", new_password_path(resource_name) %><br />
                <% end %>
                </div>


                <div class="actions">
                  <br /><%= f.submit "ログイン", class:"btn btn-primary" %>
                </div>
              <% end %>

                <div class="text-left">
                <br /><h4>登録がお済みでない方</h4>
                </div>
                  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                  <%= link_to "こちら", new_registration_path(resource_name) %>から新規登録を行ってください。
                <% end %>
          </form>
        </div>

      </div>
    </div>
  </div>
</div>
