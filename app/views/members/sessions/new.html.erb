<%= render 'layouts/members_header' %>

<div class="container">
  <div class="row">
     <div class="text-center">

          <div class="col-xs-6 col-xs-offset-3">
                   <div class="text-left">
                     <h4>会員の方はこちらからログイン</h4>
                   </div>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|%>

                    <div class="row">
                    <br/><div class="form-group">
                      <div class="text-left">
                     <%= f.label :メールアドレス ,class:"control-label" %>
                    </div>
                      <div class="col-xs-8">
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-xs-3 form-control" %>
                          </div>
                      </div>
                    <br/><div class="form-group">
                      <div class="text-left">
                      <br><%= f.label :パスワード, class:"control-label" %>
                      </div>
                      <div class="col-xs-8">
                      <%= f.password_field :password, autocomplete: "current-password", class:"col-xs-3 form-control" %>
                      </div>
                          </div>
                    </div>

                    <div class="col-xs-8">
                    <div class="text-right">
                         <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                    <br /><%= link_to "=>パスワードを忘れた方はこちら", new_password_path(resource_name) %><br />
                     <% end %>
                    </div>
                    </div>

                    <div class="row">
                      <div class="col-xs-12">
                    <div class="text-left">
                      <br /><%= f.submit "ログイン", class:"btn btn-primary btn-md" %>
                    </div>
                    </div>
                    </div>
                 <% end %>

                <div class="text-left">
                <br /><h4>登録がお済みでない方</h4>
                </div>
                  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                  <%= link_to "こちら", new_registration_path(resource_name) %>から新規登録を行ってください。
                <% end %>
         </div>

      </div>
    </div>
  </div>
</div>
