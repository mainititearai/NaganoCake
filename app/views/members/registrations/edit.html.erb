<%= render 'layouts/members_header' %>

<div class="container">
      <h2 class="title">パスワード変更フォーム</h2>

      <div class="row">
        <div class="col-xs-3 col-xs-offset-1">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>


            <br><br><% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-group">
              <%= f.label :現在のパスワード , class:"control-label" %> <br />
              <%= f.password_field :current_password, autocomplete: "current-password",class:"form-control col-xs-2 " %>
            </div>

            <div class="form-group">
              <br><%= f.label :新しいパスワード（6文字以上）, class:"control-label" %>
              <br><%= f.password_field :password, autocomplete: "new-password",class:"form-control col-xs-2 " %>
              <% if @minimum_password_length %>
                <br />
              <% end %>
            </div>

            <div class="form-group">
              <%= f.label :新しいパスワードの確認 , class:"control-label"%><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control col-xs-2 " %>
            </div>

            <div class="actions">

              <br><br><%= f.submit "更新" ,class:"btn btn-primary btn-shine col-xs-5 col-xs-offset-2"%>
            </div>
          <% end %>

            <br><br><br><br><%= link_to "<<Back", member_path, class:"btn btn-shine" ,:style=>"background-color:#ffb6c1; border:none;" %>
        </div>
    </div>
</div>


  <%= render 'layouts/members_footer' %>
