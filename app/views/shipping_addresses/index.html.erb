<%= render 'layouts/members_header' %>
<div class="container">


  <h1>配送登録/一覧</h1>

     <%= form_for @shipping_address, url: member_shipping_addresses_path, method: :post do |f| %>
  <p>
  <%= f.label :postcode , "郵便番号（ハイフンなし）" %>
  <%= f.text_field :postcode  %>
  </p>

  <p>
  <%= f.label :address, "住所" %>
  <%= f.text_field :address %>
  </p>

  <p>
  <%= f.label :name , "宛名" %>
  <%= f.text_field :name %>
  </p>

  <%= f.submit "登録する" %>
<% end%>


<table class='table'>
  <tr>
    <th>郵便番号（ハイフンなし)</th>
    <th>住所</th>
    <th>宛名</th>
    <th></th>
  </tr>

  <tr>
<% @shipping_addresses.each do |shipping_address| %>


     <td><%= shipping_address.postcode %></td>
     <td><%= shipping_address.address %></td>
     <td><%= shipping_address.name %></td>
     <td><%= link_to "編集する",edit_member_shipping_address_path(shipping_address.id)  ,class: "btn-sm btn-primary"%><td>
     <td><%= link_to "消去する" ,member_shipping_address_path(shipping_address.id) ,class: "btn-sm btn-danger" ,method: :delete %></td>
  </tr>
  <% end %>



</div>
</div>
