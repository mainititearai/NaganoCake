<%= render 'layouts/admins_header' %>

<div class="container">
	<h3>注文一覧詳細画面</h3>
	<br><div class="row">
		<div class="col-xs-7 col-xs-offset-0">

			 <table class="table table-bordered">
		          <tbody>
		          	<tr>
		          	  <th width="19%" class="info">購入者</th>
		          	  <td width="75%"><%= link_to @order.name, admin_member_path(@order.member_id) %></td>
		          	</tr>
		            <tr>
		              <th class="info class="info"">配送先</th>
		              <td><%= @order.address %></td>
		            </tr>
		            <tr>
		              <th class="info">支払い方法</th>
		              <td><%= @order.payment_method_i18n %></td>
		            </tr>
		            <tr>
		              <th class="info">注文ステータス</th>
		              <td><%= @order.order_status_i18n %></td>
		            </tr>
		          </tbody>
		        </table>
		</div>
	     <div class="row">
						<div class="col-xs-8">
						      <br><br><table class="table">
						      	<thead>
						      		<tr>
						      			<th>商品名</th>
						      			<th>単価（税込）</th>
						      			<th>数量</th>
						      			<th>小計</th>
						      			<th>製作ステータス</th>
						      		</tr>
						      	</thead>
						      	<% @order_items.each do |order_item| %>
						      	<tbody>
						      		<tr>
						      		<td><%= order_item.product.name %></td>
						      		<td><%= order_item.price %></td>
						      		<td><%= order_item.quantity %></td>
						      		<td><%= order_item.price * order_item.quantity %></td>
						      		<td><%= order_item.production_status_i18n %></td>
						      		</tr>
						      	</tbody>
						      	<% end %>
						      </table>
						 	 </div>
						<div class="col-xs-4">
							商品合計 7,150円
							<br>送料 800円
							<br>請求金額合計 8,950円
						</div>
		</div>

	</div>
</div>
<%= form_for @order_item,:url => {:controller => :orders,:action => :update} do |f| %>
<%= f.select :production_status,OrderItem.production_statuses.keys.map{|k| [I18n.t("enums.order_item.production_status.#{k}"),k]} %>
<% end %>

<%= render 'layouts/admins_footer' %>