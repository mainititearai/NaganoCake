<%= render 'layouts/admins_header' %>

<div class="container">
	<h3>注文一覧詳細画面</h3>
	<br><div class="row">
		<div class="col-xs-7 col-xs-offset-0">

			 <table class="table table-bordered">
		          <tbody>
		          	<tr>
		          	  <th width="19%" class="info">購入者</th>
		          	  <td width="75%"><%= link_to @order.name, admin_member_path(@order.member_id) %></td>
		          	</tr>
		            <tr>
		              <th class="info class="info"">配送先</th>
		              <td><%= @order.address %></td>
		            </tr>
		            <tr>
		              <th class="info">支払い方法</th>
		              <td><%= @order.payment_method_i18n %></td>
		            </tr>
		            <tr>
		              <th class="info">注文ステータス</th>
		              <td><%= form_for @order,:url => {:controller => :orders,:action => :update} do |f| %>
							<%= f.select :order_status,Order.order_statuses.keys.map{|k| [I18n.t("enums.order.order_status.#{k}"),k]} %>
							<%= f.submit "更新", class:" btn btn-primary glyphicon glyphicon-wrench" %>
							<% end %></td>
		            </tr>
		          </tbody>
		        </table>
		</div>
	     <div class="row">
						<div class="col-xs-8">
						      <br><br><table class="table">
						      	<thead>
						      		<tr>
						      			<th>商品名</th>
						      			<th>単価（税込）</th>
						      			<th>数量</th>
						      			<th>小計</th>
						      			<th>製作ステータス</th>
						      		</tr>
						      	</thead>
						      	<% @order_items.each do |order_item| %>
						      	<tbody>
						      		<tr>
						      		<td><%= order_item.product.name %></td>
						      		<td><%= order_item.price %></td>
						      		<td><%= order_item.quantity %></td>
						      		<td><%= order_item.price * order_item.quantity %></td>
						      		<td><%= order_item.production_status_i18n %></td>
						      		</tr>
						      	</tbody>
						      	<% end %>
						      </table>
						 	 </div>
						<div class="col-xs-4">
							 <table class="table table-bordered">
						          <tbody>
						          	<tr>
						          	  <th width="30%" class="warning">商品合計</th>
						          	  <td width="50%" class="text-center">
						          	  		<% @order_items.each do |order_item| %>
						          	  		<% sab_total = (order_item.price*order_item.quantity).floor %>
											<% @sum += sab_total %>
											<% end %>
											<%= @sum %>円</td>
						          	</tr>
						            <tr>
						              <th class="warning">送料</th>
						              <td class="text-center">800円</td>
						            </tr>
						            <tr>
						              <th class="warning">請求合計金額</th>
						              <td class="text-center">
											<%= (@sum*1.1).floor %>円
									  </td>
						            </tr>
						          </tbody>
						        </table>
						</div>
		</div>

	</div>
</div>


<%= render 'layouts/admins_footer' %>