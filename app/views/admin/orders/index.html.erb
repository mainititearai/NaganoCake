<%= render 'layouts/admins_header' %>

<div class="container">
	<h3>注文一覧画面</h3>
	<div class="row">
		<div class="col-xs-9 col-xs-offset-2">
		<table class="table">
			<thead>
				<th>購入日時</th>
				<th>購入者</th>
				<th>注文個数</th>
				<th>ステータス</th>
			</thead>
			<tbody>

				<% @orders.each do |order| %>
				<tr>
					<td>
					<%= link_to order.created_at.to_s(:datetime_jp), admin_order_path(order) %>
					</td>
					<td>
					<%= order.name %>
					</td>
					<td>
					<%= order.order_items.sum(:quantity) %>
					</td>
					<td>
					<%= order.order_status_i18n %>
					</td>
				</tr>
				<% end %>

			</tbody>
		</table>
		</div>
	</div>
</div>

<%= render 'layouts/admins_footer' %>