<%= render 'layouts/admins_header' %>

<div class="container">
	<h3>会員一覧画面</h3>
	<div class="row">
		<div class="col-xs-9 col-xs-offset-1">
			<br><table class="table">
		<thead style="background-color: #333333; color: white;">
			<th>会員ID</th>
			<th>氏名</th>
			<th colspan="1">メールアドレス</th>
			<th>ステータス</th>
		</thead>
			<tbody>
				<% @members.each do |member| %>
				<tr>
					<td>
						<%= member.id %>
					</td>
					<td>
						<%= link_to member.last_name + member.first_name , admin_member_path(member) %>
					</td>
					<td>
						<%= member.email %>
					</td>
					<td>
						<%= member.valid_status_i18n %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>


	</div>
</div>
