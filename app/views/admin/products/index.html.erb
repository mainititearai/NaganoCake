<%= render 'layouts/admins_header' %>

<div class="container">
	<h1>商品一覧画面</h1>
	<span class="pull-right" style=",text-decoration: none;">
	<%= link_to '',new_admin_product_path, class: "glyphicon glyphicon-plus",style:"text-decoration:none; font-size: 40px;"%>
	</span>
	<h4>
		<table class="table">
			<thead>
				<th>商品ID</th>
				<th>商品名</th>
				<th>税抜価格</th>
				<th>ジャンル</th>
				<th>ステータス</th>
			</thead>
			<tbody>
				<% @products.each do |product| %>
				<tr>
					<td>
						<%= product.id %>
					</td>
					<td>
						<%= link_to product.name,admin_product_path(product) %>
					</td>
					<td>
						<%= product.price %>
					</td>
					<td>
						<%= product.genre.name %>
					</td>
					<td>
						<%= product.sale_status_i18n %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</h4>
</div>
<%= render 'layouts/admins_footer' %>