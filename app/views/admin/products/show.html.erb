<%= render 'layouts/admins_header' %>

<div class="container table-responsive border-none">
	<div class="row">
		<h3><strong>商品 詳細画面</strong></h3>
		<div class="col-xs-7">
			<h3><%= notice %></h3>
			<table class="table-bordered" style="margin-top: 100px; width: 400px;">
				<tr style="height:50px;">
					<th style="background-color:#333333; color:white;">商品名</th><td><%= @product.name %></td>
				</tr>
				<tr style="height:50px;">
					<th style="background-color:#333333; color:white;">商品説明</th><td><%= @product.introduction %></td>
				</tr>
				<tr style="height:50px;">
					<th style="background-color:#333333; color:white;">ジャンル</th><td><%= @product.genre.name %></td>
				</tr>
				<tr style="height:50px;">
					<th style="background-color:#333333; color:white;">税込価格 (税抜価格)</th><td>¥<%= (@product.price*1.1).floor %> (<%= @product.price %>)</td>
				</tr>
				<tr style="height:50px;">
					<th style="background-color:#333333; color:white;">販売ステータス</th><td><%= @product.sale_status_i18n %></td>
				</tr>
			</table>
		</div>
		<div class="col-xs-5 table-responsive border-none" style="margin-top: 140px;">
			<%= attachment_image_tag(@product,:image,:fill,200,200, fallback: "no_image.jpg",style: 'border-radius: 30px;') %>
		</div>
	</div>
		<div class="row table-responsive border-none"style="text-align: center;">
			<%= link_to '編集する',edit_admin_product_path(@product),class:"btn btn-shine btn-lg glyphicon glyphicon-wrench", :style=>"background-color:#ffb6c1; border:none;margin-left: 60%;" %>
			<%= link_to '削除する',admin_product_path(@product), method: :delete, class:" btn btn-lg btn-danger btn-shine glyphicon glyphicon-trash" %>
		</div>
</div>