<%= render 'layouts/admins_header' %>

<div class="container">
	<div class="row">
		<div class="col-xs-4">
			<h3>商品 詳細画面</h3>
			<%= attachment_image_tag(@product,:image,:fill,100,100, fallback: "no_image.jpg") %>
		</div>
		<div class="col-xs-5">
			<br><br><br><br><br><br><br><br><br>
			<p>商品名　<%= @product.name %></p><br>

			<p>商品説明　<%= @product.introduction %></p><br>

			<p>ジャンル　 <%= @product.genre.name %></p><br>

			<p>税込価格 (税抜価格)　 <%= @product.price %> (<%= @product.price.to_i*0.1 %>)</p>

			<p>販売ステータス　<%= @product.sale_status %></p>
		</div>
		<div class="col-xs-3">
			<br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
			<%= link_to '編集する',edit_admin_product_path(@product),class: "btn btn-default" %>
		</div>
	</div>
</div>

