	<%= render 'layouts/admins_header' %>
	<div class="container">
		<div class="row">
			<%= form_for @product,:url => {:controller => :products,:action => :create} do |f| %>
			<div class="col-xs-4">
				<h1>商品登録画面</h1>


					<h4><%= f.attachment_field :image %></h4>
			</div>
			<div class="col-xs-5">
				<br><br><br><br><br>
				<h4>
					商品名　<%= f.text_field :name %><br><br>

					商品説明　 <%= f.text_area :introduction%><br><br>

					ジャンル　<%= f.collection_select :genre_id, Genre.all, :id, :name,{include_blank:"-- 選択してください --"} %><br><br>

					税抜価格　 <%= f.text_field :price %>円<br><br>

					販売ステータス　<%= f.select :sale_status,Product.sale_statuses.keys.map{|k| [I18n.t("enums.product.sale_status.#{k}"),k]} %>
				</h4>
				<h2><strong><%= notice %></strong></h2>
			</div>
			<div class="col-xs-3">
				<br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
					<%= f.submit '新規登録', class: "btn btn-default" %>
				</div>
			<% end %>
		</div>
	</div>