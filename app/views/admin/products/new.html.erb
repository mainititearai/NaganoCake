<%= render 'layouts/admins_header' %>
	<div class="container table-responsive border-none" style="margin-bottom: 100px;">
		<h3>商品登録画面</h3>
		<div class="row">
			<%= form_for @product,:url => {:controller => :products,:action => :create} do |f| %>
				<div class="col-xs-6" style="margin-top:80px;">
					<p style="color: red;"><strong><%= notice %></strong></p>

					  <div class="form-group row">
				      <div class="col-sm-5">
				        <%= f.label :商品名%>
				        <%= f.text_field :name, autofocus: true, autocomplete: "name",class:"form-control" %>
				      </div>
				  	  </div>
				      <div class="form-group row">
				      <div class="col-sm-9">
				        <%= f.label :商品説明%>
				        <%= f.text_field :introduction, autofocus: true, autocomplete: "introduction",class:"form-control introduction-text" %>

				      </div>
				  	  </div>
				       <div class="form-group row">
				      <div class="col-sm-5">
				        <%= f.label :ジャンル %>
				        <%= f.collection_select :genre_id, Genre.all, :id, :name,{include_blank:"-- 選択してください --"} ,class:"form-control"%>
				      </div>
				  		</div>

				  		<div class="form-group row">
				      <div class="col-sm-3">
				        <%= f.label :税抜き価格%>
				        <%= f.text_field :price, autofocus: true, autocomplete: "price",class:"form-control "%>

				      </div>
				  	  </div>
				        <div class="form-group row">
                    	<div class="col-sm-7">
                    	<%= f.label :"販売ステータス " %>
                    	<br><div class="radio-inline">
                      	<%= f.radio_button :sale_status, :active %>
                      	<%= f.label :販売中, class: "valid_status_label" %>
                    	</div>
	                    <div class="radio-inline">
	                      <%= f.radio_button :sale_status, :is_deleted %>
	                      <%= f.label :売り切れ, class: "valid_statuslabel" %>
					 	  </div>
					 	</div>
						</div>
							   	<%= f.submit '新規登録', class:"col-sm-4 btn btn-shine btn-lg", :style=>"background-color:#ffb6c1; border:none;"%>

					</div>
				<div class="col-xs-5" style="margin-top: 500px;">
					<%= f.attachment_field :image ,class:"form-control", :style=>"width:250px;" %>
				</div>



		<% end %>
	</div>
</div>